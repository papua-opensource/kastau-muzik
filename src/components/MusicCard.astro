---
import type {Music} from "../types/index"

interface Props {
  musics: Music[];
}

const { musics } = Astro.props as Props;
---

{
    musics.map((music, index) => (
        // <!-- CARD -->
            <div class="swiper-slide p-3 bg-gray-100 rounded-lg dark:bg-neutral-800">
                <div class="group relative">
                    <img class="w-full md:w-72 block rounded" src={`${music.cover_art_url}`} alt="" />
                    <div class="absolute bg-black rounded bg-opacity-0 group-hover:bg-opacity-60 w-full h-full top-0 flex items-center group-hover:opacity-100 transition justify-evenly">
                        <button 
                            class="play-button hover:scale-110 text-white opacity-0 transform translate-y-3 group-hover:translate-y-0 group-hover:opacity-100 transition"
                            data-music-url={music.url}
                            data-cover-art={music.cover_art_url}
                            id={`play-button-${index}`}
                        >
                             <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-play-circle-fill play-icon" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM6.79 5.093A.5.5 0 0 0 6 5.5v5a.5.5 0 0 0 .79.407l3.5-2.5a.5.5 0 0 0 0-.814l-3.5-2.5z" />
                            </svg>
                            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-pause-circle-fill pause-icon hidden" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM6.25 5C5.56 5 5 5.56 5 6.25v3.5a1.25 1.25 0 1 0 2.5 0v-3.5C7.5 5.56 6.94 5 6.25 5zm3.5 0c-.69 0-1.25.56-1.25 1.25v3.5a1.25 1.25 0 1 0 2.5 0v-3.5C11 5.56 10.44 5 9.75 5z"/>
                            </svg>
                        </button>
                    </div>
                </div>
                <div class="text-center p-4">
                    <h3 class="text-neutral-700 text-lg dark:text-neutral-200">
                        {music.title}
                    </h3>
                    <p class="text-neutral-400">
                        {music.artist}
                    </p>
                </div>
            </div>
        // <!-- END OF CARD -->
    ))
}